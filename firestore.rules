rules_version = '2';
service cloud.firestore {
  match /databases/users/documents {
    match /users/{user} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == user.uid;
    }

    match /chats/{chat} {
      allow read: if request.auth != null && resource.data.users[request.auth.uid] != null;
    }
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: false;
    }
  }
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
  }
}